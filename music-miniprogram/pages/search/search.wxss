.searchContainer{
  padding: 0 20rpx;
}
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchInput{
  position: relative;
  flex: 1;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 30rpx;
}

.cancel{
  width: 100rpx;
  text-align: center;
}

.searchIcon{
  position: absolute;
  left: 15rpx;
}
.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
}
.placeholder{
  font-size: 30rpx;
}
/* 热搜榜 */
.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotContainer .hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotContainer .hotList .hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order{
  margin: 0 10rpx;
}
.hotItem .iconImage{
  width: 30rpx;
  height: 20rpx;
  margin-left: 20rpx;
}
/* 模糊搜索内容列表 */
.searchContent{
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.resultContent{
  flex: 1;
  font-size: 26rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
}
/* 搜索历史记录 */
.history{
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.history .title{
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem{
  font-size: 26rpx;
  background: #ededed;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}
.history .delete{
  position: absolute;
  bottom: 12rpx;
  right: 15rpx;
  font-size: 36rpx;
}