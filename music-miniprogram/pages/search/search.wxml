<view class="searchContainer">
  <!-- 头部搜索区域 -->
  <view class="header">
    <view class="searchInput">
      <text class="iconfont icon-search1 searchIcon"></text>
      <input 
        class="" 
        type="text" 
        placeholder="{{placeholderContent}}" 
        placeholder-class="placeholder"
        bindinput="handleInputChange"
      ></input>
    </view>
    <text class="cancel">取消</text>
  </view>
  <!-- 搜索内容展示 -->
  <block wx:if="{{searchList.length}}">
    <view class="showSearchContent">
      <view class="searchContent">搜索内容：{{searchContent}}</view>
      <view class="searchList">
        <view class="searchItem" wx:for="{{searchList}}" wx:key="id">
          <text class="iconfont icon-search1"></text>
          <text class="resultContent">{{item.name}}</text>
        </view>
      </view>
    </view>
  </block>

  
  <block wx:else>
    <!-- 搜索历史展示 -->
    <view class="history" wx:if="{{historyList.length}}">
      <view class="title">搜索记录</view>
      <view class="historyItem" wx:for="{{historyList}}" wx:key="{{item}}">
        {{item}}
      </view>
      <text class="iconfont icon-shanchu delete" bindtap="deleteHistoryList"></text>
    </view>
      
    <!-- 热搜榜 -->
    <view class="hotContainer">
      <view class="title">热搜榜</view>
      <!-- 热搜列表 -->
      <view class="hotList">
        <view class="hotItem" wx:for="{{hotList}}" wx:key="searchWord">
          <text class="order">{{index + 1}}.</text>
          <text class="songName">{{item.searchWord}}</text>
          <image class="iconImage" wx:if="{{item.iconUrl}}" src="{{item.iconUrl}}"></image>
        </view>
      </view>
    </view>
  </block>
</view>
  
